<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:scrollbars="none"
    tools:context="com.example.saipr.final_year_proj.StudentRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/registertxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="REGISTER"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/nametxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textColor="#828383"
        />


        <EditText
            android:id="@+id/usntxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="USN"
            android:inputType="text"
            android:textColor="#828383" />

        <EditText
            android:id="@+id/stdsem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Semester"/>

        <Spinner
            android:id="@+id/branch"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:prompt="@string/sp_title"
            android:dropDownWidth="200dp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/stdrgrp">
        <RadioButton
            android:id="@+id/stdmale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MALE"
            android:onClick="rbclick"
            android:checked="false"
            />

        <RadioButton
            android:id="@+id/stdfemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FEMALE"
            android:onClick="rbclick"
            android:checked="false"/>
        </RadioGroup>

        <EditText
            android:id="@+id/emailtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#828383" />

        <EditText
            android:id="@+id/stdpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Enter password"/>

        <EditText
            android:id="@+id/stdcpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Confirm password"/>

        <EditText
            android:id="@+id/phonetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone"
            android:textColor="#828383" />

        <EditText
            android:id="@+id/addresstxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textColor="#828383" />

        <EditText
        android:id="@+id/dobtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date Of Birth"
        android:textColor="#828383"
        android:inputType="date"/>


        <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="SUBMIT"
        android:fontFamily="sans-serif-smallcaps"
        android:background="@drawable/button"
        android:textColor="#fafafa"
        android:textSize="20dp"
        android:width="250dp"/>
    </LinearLayout>
</ScrollView>
