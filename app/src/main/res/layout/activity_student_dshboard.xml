<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saipr.final_year_proj.StudentDshboardActivity">

    <!--navbar-->
   <android.support.design.widget.NavigationView
        app:headerLayout="@layout/menu_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fff"
        app:itemTextColor="#000"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start">

   </android.support.design.widget.NavigationView>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context="com.example.saipr.final_year_proj.StudentDshboardActivity"
        android:background="#b2dfdb "
        >

     <!--   <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/textgrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="DASH BOARD"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>-->




       <GridLayout
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:padding="1dp">

<!--row1-->


           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               android:layout_marginBottom="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               app:cardElevation="20dp"
               app:cardCornerRadius="8dp"

               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="center_horizontal|center_vertical"
                   android:orientation="vertical"
                  >

                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:src="@drawable/attend"
                    />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Attendence"
                       android:textColor="@android:color/black"
                       android:fontFamily="sans-serif-smallcaps"
                       android:textStyle="bold"
                       android:textAlignment="center"
                       android:layout_gravity="center"/>


               </LinearLayout>

           </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="20dp"
                app:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:src="@drawable/marks"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marks"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>



                </LinearLayout>
            </android.support.v7.widget.CardView>


           <!--row2-->



           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               android:layout_marginBottom="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               app:cardElevation="20dp"
               app:cardCornerRadius="8dp"
               >

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal|center_vertical"
                   android:orientation="vertical">
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:src="@drawable/notes"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Notes"
                       android:textColor="@android:color/black"
                       android:fontFamily="sans-serif-smallcaps"
                       android:textStyle="bold"
                       android:textAlignment="center"
                       android:layout_gravity="center"/>



               </LinearLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1"
               android:layout_marginBottom="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               app:cardElevation="20dp"
               app:cardCornerRadius="8dp"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="center_horizontal|center_vertical"
                   android:layout_margin="16dp"
                   android:orientation="vertical">
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:src="@drawable/placement"
                       android:layout_marginTop="-10dp"
                       />
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Placements"
                       android:textColor="@android:color/black"
                       android:fontFamily="sans-serif-smallcaps"
                       android:textStyle="bold"
                       android:textAlignment="center"
                       android:layout_gravity="center"/>


               </LinearLayout>
           </android.support.v7.widget.CardView>


        </GridLayout>
    </LinearLayout>

    </android.support.v4.widget.DrawerLayout>





